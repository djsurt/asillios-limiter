{
  "name": "asillios-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for asillios-limiter-sdk and asilliosweb",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:sdk": "npm run build -w packages/asillios-limiter-sdk",
    "build:web": "npm run build -w apps/asilliosweb",
    "dev:web": "npm run dev -w apps/asilliosweb",
    "typecheck": "npm run typecheck --workspaces --if-present"
  }
}
